extends layout

block content
  h1= title

  form(id='MountainForm', action="/resource/mountains", method="POST")
    .form-group
      label.mountainAttr(for='name') Name
      input#name(type='text', name='name')
    .form-group
      label.mountainAttr(for='height') Height
      input#height(type='number', name='height')
    .form-group
      label.mountainAttr(for='range') Range
      input#range(type='text', name='range')
    input(type="submit" value="Create Mountain")

  script.
    document.forms['MountainForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target))
      }).then(async (resp) => {
        if (!resp.ok) {
        const text = await resp.text();
        alert("Save failed: " + text);
        return;
      }
      const body = await resp.json();
      alert("Save succeeded");

      window.location.href = "/mountains";
    })
    .catch((error) => {
      alert("Save failed: " + error);
    });
    });