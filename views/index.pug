extends layout

block content
  .container
    if !user
      h1= title
      p Welcome to the Mountain App. Please log in or register to continue.
      br
      a.btn.btn-primary(href="/login") Login
      br
      br
      a.btn.btn-secondary(href="/register") Register

    if user
      h1= title
      p You are currently logged in as #{user.username}
      br
      a.btn.btn-primary(href="/mountains") Take me to mountains
      br
      br
      a.btn.btn-danger(href="/logout") Logout